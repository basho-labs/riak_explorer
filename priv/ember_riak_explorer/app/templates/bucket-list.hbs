<h4>Bucket List</h4>

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <strong>Bucket Type:</strong>
            {{model.bucketTypeId}}
        </div>
        <div class="col-md-5">
            <strong>Cluster:</strong>
            {{model.cluster.clusterId}}
        </div>
    </div>
</div>

{{#if model.isLoaded}}
    <div class="container" style="margin-top: 2em;">
        <div class="row">
            <div>
            Cache created: {{model.created}}
            {{#if model.cluster.developmentMode}}
                {{refresh-buckets action="refreshBuckets" bucketList=model}}
            {{/if}}
            </div>
        </div>
    </div>

    <div class="container" style="margin-top: 2em;">
        Displaying
        <strong>{{model.count}}</strong>
        buckets out of
        <strong>{{model.total}}</strong>
        total.
    </div>

    <div class="container" style="padding-top: 2em;">
        {{#riak-buckets bucketList=model cluster=model.cluster
            bucketTypeI=model.bucketTypeId}}
        {{/riak-buckets}}
    </div>
{{else}}
    <div class="container" style="padding-top: 2em; text-align: center;">
    Loading...
    </div>
{{/if}}
